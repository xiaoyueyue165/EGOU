    <script>
        var ifopen = [false,false,false,false];
        appcan.ready(function() {
        });
        function  addAdvice(id){
            var html = '<div id="ad'+id+'" class="umar-l margin-t">'
                +'<textarea class="m-textarea gray-font mf-size0">有问题请反馈给我们，我们会为您提供更好的服务</textarea>'
                +'</div>';
            if(ifopen[id]){
                $("#angle"+id)[0].className = "fa fa-angle-down";
                $("#ad"+id).remove();
                ifopen[id] = false;
            }else{
                $("#angle"+id)[0].className = "fa fa-angle-up";
                $("#advice"+id).append(html);
                ifopen[id] = true;
            }
            
        }
    </script>
