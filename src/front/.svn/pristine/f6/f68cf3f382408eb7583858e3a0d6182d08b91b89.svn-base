<!DOCTYPE html>
<html class="um landscape min-width-240px min-width-320px min-width-480px min-width-768px min-width-1024px">

<head>
    <title></title>
    <meta charset="utf-8">
    <meta name="viewport" content="target-densitydpi=device-dpi, width=device-width, initial-scale=1, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0">
    <link rel="stylesheet" href="../build/css/fonts/font-awesome.min.css">
    <link rel="stylesheet" href="../build/css/ui-box.css">
    <link rel="stylesheet" href="../build/css/ui-base.css">
    <link rel="stylesheet" href="../build/css/ui-color.css">
    <link rel="stylesheet" href="../build/css/appcan.icon.css">
    <link rel="stylesheet" href="../build/css/appcan.control.css">
    <link rel="stylesheet" href="css/infomgmt.css">
</head>

<body class="um-vp bc-bg" ontouchstart>
    <div class="ub ub-ver white-bg mf-size1 b-border">

        <!--
            <div class="ub m-row">
                <div class="ub ub-ac l-width umar-l">
                    <span class="">验证码</span>
                </div>
                <div class="ub ub-ac ub-f1">
                    <div class="uinput ub ub-f1">
                        <input placeholder="获取验证码并输入" type="number" class="ub-f1" id="code" name="code">
                    </div>
                </div>
                <button type="button" class="ub ub-ac mp-btn2 btn-vcode" id="message" onclick="getValidMsg()"> 获取验证码 </button>
            </div>
            -->
        <div class="ub m-row umar-l umar-r">
            <div class="ub ub-ac l-width">
                <span class="">原密码</span>
            </div>
            <div class="ub ub-ac ub-f1">
                <div class="uinput ub ub-f1">
                    <input placeholder="输入原登录密码" type="password" class="ub-f1" value="">
                </div>
            </div>
        </div>

        <div class="ub m-row umar-l umar-r">
            <div class="ub ub-ac l-width">
                <span class="">新密码</span>
            </div>
            <div class="ub ub-ac ub-f1">
                <div class="uinput ub ub-f1">
                    <input placeholder="输入新登录密码" type="password" class="ub-f1" value="">
                </div>
            </div>
        </div>

        <div class="ub m-row umar-l umar-r no-border-b">
            <div class="ub ub-ac l-width">
                <span class="">确认新密码</span>
            </div>
            <div class="ub ub-ac ub-f1">
                <div class="uinput ub ub-f1">
                    <input placeholder="再次输入新登录密码" type="password" class="ub-f1" value="">
                </div>
            </div>
        </div>
    </div>

    <div id="retStr" class="pop-tip mf-size1"></div>

    <div class="umar-a margin-t-l">
        <div class="btn ub ub-ac bc-text-head ub-pc bc-btn mp-btn" id="ok_pwd">
            确认修改
        </div>
    </div>

    <script src="../build/js/appcan.js"></script>
    <script src="../build/js/appcan.control.js"></script>
    <script src="../common/comm.js"></script>
</body>
<script>
    var countdown = 100;
    var phone = "";
    appcan.ready(function () {});

    //获取验证码
    function getValidMsg() {
        var url = URL + "/comm/user/queryPhoneSend";
        var paramJsonStr = "";
        var func = queryPhoneSendCallBack;
        var dataType = "text";
        ajaxPostQuery(url, paramJsonStr, func, dataType);

        $("#message")[0].innerHTML = "请在<span id='time'></span>秒内输入验证码";
        setTimeInterval();
    }
    //获取验证码回调
    function queryPhoneSendCallBack(data) {
        if (typeof data == "string") {
            data = eval("(" + data + ")");
        }
        phone = data.phone;
        var retStr = data.retStr;
        $("#retStr")[0].innerHTML = retStr;
    }

    //验证码有效时间
    function setTimeInterval() {
        window.setTimeout('setTimeInterval()', 1000); //设置的时间函数
        if (countdown > 0) {
            document.getElementById("time").innerHTML = countdown;
            countdown--;
        } else {
            $("#message")[0].innerHTML = "重新获取验证码";
            countdown = 100;
        }
    }

    appcan.button("#ok_pwd", "btn-act", function () {
        var sid = appcan.locStorage.getVal("sid");
        //var code = $("input")[0].value;
        var orgPwd = $("input")[0].value;
        var pswdTxt = $("input")[1].value;
        var check_pswdTxt = $("input")[2].value;

        if (orgPwd == "" || pswdTxt == "" || check_pswdTxt == "") {
            uexWindow.alert("提示", "请确认完成输入后再提交", "确定");
            return;
        }
        if (pswdTxt.length > 25) {
            uexWindow.alert("提示", "密码过长，请修改为25字符以内！", "确定");
            return;
        }
        if (pswdTxt != check_pswdTxt) {
            uexWindow.alert("提示", "密码输入不一致，请重新输入！", "确定");
            return;
        }
        var url = URL + "/comm/user/updatePassword";
        var paramJsonStr = "sid=" + sid + "&oldPassword=" + orgPwd + "&newPassword=" + pswdTxt;
        var func = updatePasswordCallBack;
        var dataType = "text";
        ajaxPostQuery(url, paramJsonStr, func, dataType);
    })

    function updatePasswordCallBack(data) {
        if (data == "true") {
            uexWindow.evaluateScript("passwordMgmt", 0, "closepage()");
        } else {
            uexWindow.alert("提示", "密码修改失败，请重试", "确定");
        }
    }
</script>

</html>