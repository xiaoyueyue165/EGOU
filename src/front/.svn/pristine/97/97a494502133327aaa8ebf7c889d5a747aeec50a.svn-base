    <script src="../common/template-web.js" type="text/javascript" charset="utf-8"></script>
    <script>
        var mentionOil = {
            init : function() {
                var yue = this;
                yue.queryMentOilOrder();
            },
            queryMentOilOrder : function() {
                var yue = this;
                var func = yue.showOrderCallback.bind(yue);

                ajaxPostQuery(URL + "/app/oil/selectOilPriceListBy", "", func, "text");
                appcan.window.openToast('加载中...', '0', '5', '1');
            },
            showOrderCallback : function(data) {

                appcan.window.closeToast();
                if ( typeof data == "string") {
                    data = JSON.parse(data)
                }
                if (!data.rows || data.rows.length == 0) {
                    nodata('content', '您没有符合条件的付油通知单')

                    return;
                }

                this.render($('.oilPrice tbody'), data.rows);

            },
            render : function(ele, data) {
                var html = '';
                if (!data || data.length == 0) {
                    $('#content').html('')
                    nodata('content', '您没有符合条件的付油通知单')

                    return;
                }
                for (var i = 0; i < data.length; i++) {

                    if (data[i].length != 0 && data[i].interOilname.length>5) {//有数据
                        var dateArr = data[i].updateDate.split(' '),
                        date =dateArr[0],
                        oilName = data[i].interOilname,
                        oilPrice = data[i].interOilprice,
                        zhangdie = data[i].interChg;

                        $('#date').html(date)

                        if (i % 2 == 0) {
                            html += '<tr class="del">' + '<td>' + oilName + '</td>' + '<td>' + oilPrice + '</td>' + '<td>' + zhangdie + '</td></tr>'
                        } else if (i % 2 != 0)
                            {html += '<tr class="alt del">' + '<td>' + oilName + '</td>' + '<td>' + oilPrice + '</td>' + '<td>' + zhangdie + '</td></tr>'
                        }

                    }

                }
                ele.append(html)

            }
        }

        mentionOil.init();

    </script>

