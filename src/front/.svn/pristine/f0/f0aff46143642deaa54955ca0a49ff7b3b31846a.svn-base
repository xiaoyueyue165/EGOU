    <script>
        appcan.ready(function() {
            var value = uexWidgetOne.platformName;

        })
         loadMore.init({
            ele:"content1"
        });






        function goToDownloadPage() {

            appcan.window.alert({
                title : "提示",
                content : "这是文字内容",
                buttons : ["更新","取消"],
                callback : function(err, data, dataType, optId) {
                    if (data == '0') {
                        appcan.window.open({
                            name : 'demo',
                            dataType : 0,
                            data : 'https://xiaoyueyue165.github.io/download/app.apk'
                        });

                        window.open(msg.downloadUrl)
                    }
                    if (data == '1') {

                    }
                    console.log(err, data, dataType, optId);
                }
            });

        }

        function checkUpdate() {
loadMore.complete();
            uexWidget.checkUpdate(function(error, data) {
                if (!error) {
                    alert(JSON.stringify(data))
                    var AAAAAA = data.result;
                    alert('data.result' + AAAAAA);
                }
            });

            uexWidget.cbCheckUpdate = function(opId, dataType, data) {
                alert('opid:' + opId + ',dataType:' + dataType + ',data:' + data);
            }
        }

        var savePath = "wgt://data/app.apk";
        function checkWidgetUpdate(version) {
            uexDownloaderMgr.onStatus = function(opId, fileSize, percent, status) {
                if (status == 0) {
                    var str = '下载进度：' + percent + '%';
                    if (fileSize == -1)
                        str = '下载中，请稍候...';
                    uexWindow.toast('1', '5', str, '');
                } else if (status == 1) {
                    uexWindow.closeToast();
                    uexDownloaderMgr.closeDownloader(1);
                    uexWidget.installApp(savePath);
                } else {
                    uexWindow.closeToast();
                    uexWindow.toast('0', '5', '下载失败', '2000');
                    uexDownloaderMgr.closeDownloader(1);
                }
            }
        }

        function getAppVersion() {

            uexWidgetOne.getCurrentWidgetInfo();
            uexWidgetOne.cbGetCurrentWidgetInfo = function(opId, dataType, data) {
                var info = JSON.parse(data);
                alert(JSON.stringify(info))
                var softVer = info.version;
                alert('版本号为' + softVer)
            }
        }

        function localDownLoad() {
            var savePath = "wgt://data/app.apk";
            uexWidget.installApp(savePath);
        }

        function openBrower() {
            var value = uexWidgetOne.platformName;
            alert('浏览器类型为 '+value)

            if (value == "android") {
                alert(value)
                uexWidget.startApp("1", "android.intent.action.VIEW", '{"data":{"mimeType":"text/html","scheme":"https://github.com/xiaoyueyue165"}}');
            } else {
                uexWidget.loadApp("https://github.com/xiaoyueyue165", null, null);
            }
        }

    </script>

