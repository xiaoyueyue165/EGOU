<!DOCTYPE html>
<html class="um landscape min-width-240px min-width-320px min-width-480px min-width-768px min-width-1024px">
    <head>
        <title></title>
        <meta charset="utf-8">
        <meta name="viewport" content="target-densitydpi=device-dpi, width=device-width, initial-scale=1, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0">
        <link rel="stylesheet" href="../build/css/fonts/font-awesome.min.css">
        <link rel="stylesheet" href="../build/css/ui-box.css">
        <link rel="stylesheet" href="../build/css/ui-base.css">
        <link rel="stylesheet" href="../build/css/ui-color.css">
        <link rel="stylesheet" href="../build/css/appcan.icon.css">
        <link rel="stylesheet" href="../build/css/appcan.control.css">
        <link rel="stylesheet" href="css/register.css">
        <script type="text/javascript" src="../common/comm.js"></script>
    </head>
    <body class="um-vp bc-bg" ontouchstart>
         <!--header开始-->
        <div class="uh bc-text-head ub bc-head" id="header">
             <div class="nav-btn" id="nav-left">
                <div class="t-btn-a1 ub-img uwh-tBtn fa fa-angle-left fa-2x"></div>
            </div>
            <h1 class="ut ub-f1 ulev-3 ut-s tx-c" tabindex="0">用户注册</h1>
            <div class="nav-btn" id="nav-right">
            </div>
        </div>
        <!--header结束-->
        

        <div class=" ">
            <div class="white-bg mf-size1 b-border">
                <div class="ub m-row umar-l umar-r">
                    <div class="ub ub-ac uw-reg ">
                        用户名
                    </div>
                    <div class="ub ub-ac ub-f1">
                        <div class="uinput ub ub-f1 mf-size2">
                            <input placeholder="系统登录名，长度不超过25个字符" type="text" class="ub-f1" id="username">
                        </div>
                    </div>
                </div>
                <div class="ub m-row umar-l umar-r">
                    <div class="ub ub-ac uw-reg ulev-app1">
                        密码
                    </div>
                    <div class="ub ub-ac ub-f1">
                        <div class="uinput ub ub-f1 mf-size2">
                            <input placeholder="支持数字、字母、特殊符号，长度不超过25个字符" type="password" class="ub-f1" id="password">
                        </div>
                    </div>
                </div>
                <div class="ub m-row umar-l umar-r no-border-b">
                    <div class="ub ub-ac uw-reg ulev-app1">
                        确认密码
                    </div>
                    <div class="ub ub-ac  ub-f1">
                        <div class="uinput ub ub-f1 mf-size2">
                            <input placeholder="再次输入设置的密码" type="password" class="ub-f1" id="check_password">
                        </div>
                    </div>
                </div>
            </div>
            <div class="uinn-at1 umar-a">
                <div class="btn ub ub-ac bc-text-head ub-pc bc-btn mp-btn"  id="btn-register-next">
                    下一步
                </div>
            </div>
        </div>
    <script src="../build/js/appcan.js"></script>
    <script src="../build/js/appcan.control.js"></script>
    </body>
    <script>
        appcan.ready(function() {
            appcan.initBounce();
        })

        appcan.button("#nav-left", "btn-act", function() {
            appcan.window.close(-1);
        })

        appcan.button("#btn-register-next", "ani-act", function() {

            var nameTxt = document.getElementById("username").value;
            var pswdTxt = document.getElementById("password").value;
            var check_pswdTxt = document.getElementById("check_password").value;

            if (nameTxt == "" || pswdTxt == "") {
                uexWindow.alert("提示", "请输入用户名和密码！", "确定");
                return;
            }
            if (nameTxt.length>25) {
                uexWindow.alert("提示", "用户名过长，请修改至25字符以内！", "确定");
                return;
            }
            if (pswdTxt.length>25) {
                uexWindow.alert("提示", "密码过长，请修改至25字符以内！", "确定");
                return;
            }
            if (pswdTxt != check_pswdTxt) {
                uexWindow.alert("提示", "密码输入不一致，请重新输入！", "确定");
                return;
            }
            //向后台发送数据  
            $.ajax({  
                type: "POST", //用POST方式传输  
                dataType: "text",
                headers:{accept:"*/*"},
                url: URL+'/comm/userLogin/validateName',
                data: "loginName=" + nameTxt+"&loginPassword="+pswdTxt,  
                error: function (XMLHttpRequest, textStatus, errorThrown) { },  
                success: function (data){ 
                    if(data==0){//用户名存在
                        uexWindow.alert("提示","该用户名已存在，请重新输入！","确定");
                    }else{
                        appcan.locStorage.setVal("re_username", nameTxt);
                        appcan.locStorage.setVal("re_password", pswdTxt);
                        appcan.window.open("register_detailInfo", "../userpage/register_detailInfo.html", 10);
                    }
                }  
            });  

            
        })
    </script>
</html>
