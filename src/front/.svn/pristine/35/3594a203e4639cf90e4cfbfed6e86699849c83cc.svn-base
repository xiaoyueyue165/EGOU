<!DOCTYPE html>
<html class="um landscape min-width-240px min-width-320px min-width-480px min-width-768px min-width-1024px">
    <head>
        <title></title>
        <meta charset="utf-8">
        <meta name="viewport" content="target-densitydpi=device-dpi, width=device-width, initial-scale=1, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0">
        <link rel="stylesheet" href="../css/fonts/font-awesome.min.css">
        <link rel="stylesheet" href="../build/css/ui-box.css">
        <link rel="stylesheet" href="../build/css/ui-base.css">
        <link rel="stylesheet" href="../build/css/ui-color.css">
        <link rel="stylesheet" href="../build/css/appcan.control.css">
        <link rel="stylesheet" href="css/common_page.css">
    </head>
    <body class="pop-body" ontouchstart>

        <div class="pop-position content-width">
            <div class="pay-pop">
                <div id="" class="ub ub-ver">
                    <div id="0" class="typechoose uinn ub ubb bc-border ub-ac ub-pc h-type">
                        转账/汇款
                    </div>
                    <div id="1" class="typechoose uinn ub ubb bc-border ub-ac ub-pc  h-type">
                        支票
                    </div>
                    <div id="2" class="typechoose uinn ub ubb bc-border ub-ac ub-pc  h-type">
                        账面余额支付
                    </div>
                </div>

                <div id="btn" class="clo-btn">
                    <div class="ub btn bc-btn ub-ac ub-pc white-font">
                        关闭
                    </div>
                </div>
            </div>

        </div>

        <script src="../build/js/appcan.js"></script>
        <script src="../build/js/appcan.control.js"></script>
    </body>
    <script>
        appcan.ready(function() {
            appcan.initBounce();
        })

        appcan.button("#btn", "ani-act", function() {
            closepop();
        })
        
        appcan.button(".typechoose" , "btn-act" , function(){
            //alert(this.id);
            var payType = "";
            switch(this.id){
                case "0":
                payType = "转账/汇款";
                break;
                case "1":
                payType = "支票";
                break;
                case "2":
                payType = "账面余额支付";
                break;
            }
            appcan.locStorage.setVal("paytypeId", this.id);
            appcan.locStorage.setVal("paytypeName", payType);
            appcan.window.publish('paytype', payType+","+this.id);
            closepop();
        })
        
        
        //关闭浮动窗口
        function closepop() {
            appcan.closePopover("paymenu");
        }

    </script>
</html>