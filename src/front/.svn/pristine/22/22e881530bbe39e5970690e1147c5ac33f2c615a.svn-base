<!DOCTYPE html>
<html class="um landscape min-width-240px min-width-320px min-width-480px min-width-768px min-width-1024px">
    <head>
        <title></title>
        <meta charset="utf-8">
        <meta name="viewport" content="target-densitydpi=device-dpi, width=device-width, initial-scale=1, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0">
        <link rel="stylesheet" href="../../build/css/fonts/font-awesome.min.css">
        <link rel="stylesheet" href="../../build/css/ui-box.css">
        <link rel="stylesheet" href="../../build/css/ui-base.css">
        <link rel="stylesheet" href="../../build/css/ui-color.css">
        <link rel="stylesheet" href="../../build/css/appcan.icon.css">
        <link rel="stylesheet" href="../../build/css/appcan.control.css">
        <link rel="stylesheet" href="css/guide.css">
    </head>
    <body class="um-vp white-bg" ontouchstart>
        <div id="contentInfo" class="guide-wrapper">

        </div>

        <script src="../../build/js/appcan.js"></script>
        <script src="../../build/js/appcan.control.js"></script>
        <script src="../../common/comm.js"></script>
    </body>
    <script>
        appcan.ready(function() {

            //去除滚动条
            uexWindow.setWindowScrollbarVisible('false');
            var id = appcan.locStorage.getVal("guideId");
            getContInfoByType(id);
        });

        function getContInfoByType(id) {
            var url = URL + "/comm/continfo/getContInfoByType";
            var paramJsonStr = "type=" + id + "&pager.pageSize=1&pager.pageNo=1";
            var func = getContInfoByTypeCallBack;
            var dataType = "text";
            ajaxPostQuery(url, paramJsonStr, func, dataType);
        }

        function getContInfoByTypeCallBack(data) {
            data = eval("(" + data + ")");
            // console.log(data)
            var rows = data.rows;

            for (var i = 0; i < rows.length; i++) {
                var content = rows[i].cont_info;

                content = content.replace(/style\s*=\s*('[^']*'|"[^"]*")/g, "");
                  content = content.replace(/&nbsp;/g, "");
                //去掉所有的html标记
               
               var id = appcan.locStorage.getVal("guideId");
               
               var html = "";
               if(id=='6'){
                   //购油流程说明
                   html = "<h1 style=\"line-height: 3em; text-align: left;\"><span style=\"font-family: 微软雅黑, &#39;Microsoft YaHei&#39;; font-size: 20px;\">&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;购油流程说明</span></h1><p style=\"line-height: 3em;\"><span style=\"font-family: 微软雅黑, &#39;Microsoft YaHei&#39;; font-size: 16px;\">&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; 1、 注册或登录，选购油品，选择油品出库方式（自提或配送）及数量，加入并提交意向单。</span></p><p style=\"line-height: 3em;\"><span style=\"font-family: 微软雅黑, &#39;Microsoft YaHei&#39;; line-height: 3em; font-size: 16px;\">&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; 2、 公司审核确认后通知付款，货款到帐后，为您开具付油通知单。</span></p><p style=\"line-height: 3em;\"><span style=\"font-family: 微软雅黑, &#39;Microsoft YaHei&#39;; font-size: 16px;\">&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; 3、 提交自提或配送申请，持打印二维码前往油库自提或等待配送。</span></p>";
               
               }else if(id=="7"){
                   html = "<h1 style=\"white-space: normal; line-height: 3em;\"><span style=\"font-family: 微软雅黑, &#39;Microsoft YaHei&#39;; font-size: 20px;\">&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;支付方式说明</span></h1><p><span style=\"font-family: 微软雅黑, &#39;Microsoft YaHei&#39;; font-size: 16px;\">&nbsp; &nbsp; &nbsp;</span><br/><span style=\"font-size: 20px;\"></span></p><p><span style=\"font-size: 16px; font-family: 微软雅黑, &#39;Microsoft YaHei&#39;;\">&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; 支付方式为线下电子付款或支票方式</span></p>";
               }else {
                  html = "";
               }
              
                 html = html.replace(/style\s*=\s*('[^']*'|"[^"]*")/g, "");
                //去掉所有的html标记

                html = html.replace(/&nbsp;/g, "");

                $("#contentInfo")[0].innerHTML = html;
            };
        }

    </script>
</html>
