<!DOCTYPE html>
<html class="um landscape min-width-240px min-width-320px min-width-480px min-width-768px min-width-1024px">
    <head>
        <title></title>
        <meta charset="utf-8">
        <meta name="viewport" content="target-densitydpi=device-dpi, width=device-width, initial-scale=1, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0">
        <link rel="stylesheet" href="../build/css/fonts/font-awesome.min.css">
        <link rel="stylesheet" href="../build/css/ui-box.css">
        <link rel="stylesheet" href="../build/css/ui-base.css">
        <link rel="stylesheet" href="../build/css/ui-color.css">
        <link rel="stylesheet" href="../build/css/appcan.icon.css">
        <link rel="stylesheet" href="../build/css/appcan.control.css">
        <link rel="stylesheet" type="text/css" href="css/delivery.css"/>
    </head>
    <body class="um-vp white-bg" ontouchstart>
        <div id="page_0" class="up ub ub-ver" tabindex="0">
           <!--header开始-->
            <div class="uh bc-text-head ub bc-head" id="header">
                 <div class="nav-btn" id="nav-left">
                    <div class="t-btn-a1 ub-img uwh-tBtn fa fa-angle-left fa-2x"></div>
                </div>
                <h1 class="ut ub-f1 ulev-3 ut-s tx-c" tabindex="0">油库时段指标</h1>
                <div class="nav-btn" id="nav-right">
                </div>
            </div>
            <!--header结束-->
            <!--content开始-->
            <div id="content" class="ub-f1 tx-l">
                <table class="gridtable" cellpadding="0" cellspacing="0" border="0" id="tableTime" width="100%"></table>
                
                <div class="gap "></div>
                <div class="ub m-row4 mf-size1">
                                                                      配送日期：<input class="m-input" type="text" readonly="readonly" id="day">
                </div>
                <div class="ub m-row4 mf-size1">
                                                                    配送时段：<input class="m-input" type="text" readonly="readonly" id="time">
                </div>
            </div>
            <!--content结束-->

        </div>
        <script src="../build/js/appcan.js"></script>
        <script src="../build/js/appcan.control.js"></script>
        <script src="../common/comm.js"></script>
        <script src="../common/jquery.min.js"></script>
 </body>
    <script>
        appcan.ready(function() {
            var depotId = appcan.locStorage.getVal("depotId");
            var date01 = new Date();
            var date02 = new Date();
            var date03 = new Date();
            date01.setDate(date01.getDate()+1);
            date02.setDate(date02.getDate()+2);
            date03.setDate(date03.getDate()+3);
            var date_01 = date01.formate("yyyy-MM-dd");
            var date_02 = date02.formate("yyyy-MM-dd");
            var date_03 = date03.formate("yyyy-MM-dd");
            var htmlStr="<tr><th></th><th>"+date_01+"</th><th>"+date_02+"</th><th>"+date_03+"</th></tr>";
            $("#tableTime").append(htmlStr);
            queryDepotBookByDate(depotId,date_01,date_02,date_03);
        })
        
        function queryDepotBookByDate(depotId,date_01,date_02,date_03){
            var url = URL + "/front/bill/queryDepotBookByDate";
            var paramJsonStr = "depotId="+depotId+"&date_01="+date_01+"&date_02="+date_02+"&date_03="+date_03;
            var func = queryDepotBookByDateCallBack;
            var dataType = "text";
            ajaxPostQuery(url, paramJsonStr, func, dataType);
            appcan.window.openToast('指标获取中...', '0', '5', '1');
        }
        function queryDepotBookByDateCallBack(data){
            appcan.window.closeToast();
            if (typeof data == "string") {
                data = eval("(" + data + ")");
            }
            var html_02="<tr><td>8:00-10:00</td><td class='has_num'>"+data[0]["clockEightRest"]+"</td><td class='has_num'>"+data[1]["clockEightRest"]+"</td><td class='has_num'>"+data[2]["clockEightRest"]+"</td></tr><tr><td>10:00-12:00</td><td class='has_num'>"+data[0]["clockTenRest"]+"</td><td class='has_num'>"+data[1]["clockTenRest"]+"</td><td class='has_num'>"+data[2]["clockTenRest"]+"</td></tr><tr><td>12:00-14:00</td><td class='has_num'>"+data[0]["clockTwRest"]+"</td><td class='has_num'>"+data[1]["clockTwRest"]+"</td><td class='has_num'>"+data[2]["clockTwRest"]+"</td></tr><tr><td>14:00-16:00</td><td class='has_num'>"+data[0]["clockFtRest"]+"</td><td class='has_num'>"+data[1]["clockFtRest"]+"</td><td class='has_num'>"+data[2]["clockFtRest"]+"</td></tr><tr><td>16:00-18:00</td><td class='has_num'>"+data[0]["clockStRest"]+"</td><td class='has_num'>"+data[1]["clockStRest"]+"</td><td class='has_num'>"+data[2]["clockStRest"]+"</td></tr>";
            $("#tableTime").append(html_02);
            
            $(function(){
                $('.has_num').click(function(){
                　　                                  $(this).css('background-color','#d7393a');
                    $(this).css('color','#fff');
                    $('#tableTime td').not(this).css('background-color','#fff');//其他的全部设置为红色
                    $('#tableTime td').not(this).css('color','#333');
                    
                    var hang = $(this).parent().prevAll().length;               
                    var lie = $(this).prevAll().length;
                    
                    day = $("#tableTime tr:eq(0) th:eq("+lie+")").text();
                    time = $("#tableTime tr:eq("+hang+") td:eq(0)").text();
                    console.info(day);
                    console.info(time);
                    
                    $("#day").val(day);
                    $("#time").val(time);
                    
                });
            });
        }
        
        appcan.button("#nav-left", "btn-act", function() {
            var day = $("#day").val();
            var time = $("#time").val();
            appcan.window.publish("daytime", day+"@"+time);
            appcan.window.close(-1);
        })
        
 </script></html>