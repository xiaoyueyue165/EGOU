}
.t-col4 {
  width: 15%;
}
.content-info {
  font-size: 0.9em;
}
.list-content {
  font-size: 0.8em;
}

.m-row:last-child {
  border-bottom: none;
}

.m-act {
  color: #ffffff;
  padding: 0.2em 0.4em;
  border-radius: 0.2em;
}
.act-binary {
  background: #ffa03c;
}
.state-close {
  background: #aaaaaa;
}
.s-col1 {
  width: 7.5em;
}
.s2-col1 {
  width: 5em;
}
.order-search .uinput input:focus {
  outline: none !important;
}
.QRcode {
  width: 2.5em;
  height: 2.5em;
  margin-top: 1.2em;
  margin-right: 1em;
  background-image: url('myImg/qr_code.png');
  background-repeat: no-repeat;
  background-position: center;
  background-size: 2.5em 2.5em;
}
.site {
  border: 1px solid #cccccc;
  color: #999999;
  font-size: 0.8em;
  padding: 0.2em;
  border-radius: 0.2em;
}
.order-info {
  font-size: 0.9em;
  margin-left: 0.4em;
  padding-top: 0.4em;
  margin-bottom: 1em;
}

.m-state {
  padding: 0.2em;
  border-radius: 0.2em;
  border: 1px solid #ffa03c;
  color: #ffa03c;
}
.s-state {
  padding: 0.1em 0.4em;
  border-radius: 0.3em;
  border: 0.1em solid;
  border-color: #cccccc;
  color: #999999;
}

.listview .sc-bg {
  padding: 0.2em 0;
}
.m-row {
  height: 3.4em;
}
.c-txt {
  color: #218dd5;
}

.action-group .mp-btn2, .action-group .mp-btn {
  width: 37%;
}

input[type="range"] {
  -webkit-appearance: none;
  outline: none;
  background-color: #ddd;
  border-radius: 0.6em;
  width: 100%;
  height: 0.6em;
}
input[type="range"]::-webkit-slider-thumb {
  -webkit-appearance: none;
  cursor: default;
  height: 2.5em;
  width: 1.5em;
  border-radius: 1em;
  background: linear-gradient(#ffb1b1, #ff6d6d);
  transform: translateY(-0.1em);
  -webkit-box-shadow: 0 -1px 1px #d84646 inset;
}


