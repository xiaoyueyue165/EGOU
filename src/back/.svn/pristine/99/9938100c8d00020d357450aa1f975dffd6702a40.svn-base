<script>
    var vm = new Vue({
        el: "#vueControl",
        data: {
            locStorage: {
                companyType: appcan.locStorage.getVal("companyType"),
                username: appcan.locStorage.getVal("username"),
                userList: appcan.locStorage.getVal("userList"),
                orgInfo: appcan.locStorage.getVal("orgInfo")
            },
            state: {
                actionsIsEmpty: false
            },
            actions: [{
                    name: '订单审核',
                    id: 'audit0',
                    isSHow: false
                },
                {
                    name: '订单结算',
                    id: 'audit1',
                    isSHow: false
                },
                {
                    name: '配送自提审核',
                    id: 'audit2',
                    isSHow: false
                }
            ],
            searchs: [{
                name: '订单查询,结算查询',
                id: 'search0',
                isSHow: false
            }]
        },
        beforeCreate: function () {
            console.log(1);

        },
        methods: {
            loggedIn: function () {
                var orgInfo = JSON.parse(this.locStorage.orgInfo);
                $("#empName")[0].innerHTML = orgInfo.empName;
                $("#orgName")[0].innerHTML = orgInfo.orgName;
            },
            pipei: function (val) {
                var re = new RegExp("." + val, "g")
                var userListArr = this.userListArr;
                for (var i = 0; i < userListArr.length; i++) {
                    var item = userListArr[i].roleName;
                    if (re.test(item) || re.test("姚桢")) {

                        return true;
                    }
                }
                return false;

            },
            actionsLayout: function () {
                var _this = this;
                var pipei = _this.pipei;
                var isYaoZhen = false;
                _this.userListArr = JSON.parse(_this.locStorage.userList);
                this.actions[0].isSHow = pipei("订单审核") || pipei("销售业务");
                this.actions[1].isSHow = pipei("订单结算") || pipei("销售业务");
                this.actions[2].isSHow = pipei("配送自提审核") || pipei("销售业务");
                isYaoZhen = pipei("姚桢");
                // 非姚桢的总部账户不显示 订单结算 ，全资账号不显示，pc为导入操作
                if (_this.locStorage.companyType == "总部" && isYaoZhen) {
                    this.actions[1].isSHow = true;
                } else {
                    this.actions[1].isSHow = false;
                }

                if (_this.locStorage.companyType == "全资") {
                    this.actions[1].isSHow = false;
                }

                // 是否为空的业务操作数据

            },
            searchLayout: function () {
                var _this = this;
                var pipei = _this.pipei;
                this.searchs[0].isSHow = pipei("业务查询");
            }

        },
        mounted: function () {
            this.loggedIn();
            this.actionsLayout();
            this.searchLayout();
        }

    })



    var lv_yx = appcan.listview({
        selector: "#listview",
        type: "thinLine",
        hasIcon: false,
        hasAngle: true,
        hasSubTitle: true,
        multiLine: 1,
    });

    lv_yx.set([{
        title: " <div class='ub ub-ac padding-a mf-size2'>业务操作</div>",
        subTitle: "全部操作",
        id: "1"
    }]);

    lv_yx.on("click", function (ele, obj, curEle) {
        appcan.window.open("intention", "../intention/intention.html", 10);
    });

    var others = appcan.listview({
        selector: "#others",
        type: "thinLine",
        hasIcon: false,
        hasAngle: true,
        hasSubTitle: true,
        multiLine: 1,
    });
    others.set([{
        title: " <div class='ub ub-ac padding-a mf-size2'>其他功能</div>",
        subTitle: "查看更多",
        id: "1"
    }]);

    others.on("click", function (ele, obj, curEle) {
        // appcan.window.open("intention", "../intention/intention.html", 10);
    });

    // 业务操作
    function viewDD(id) {
        switch (id) {
            case "audit0":
                // 审核订单
                appcan.window.open("toConfirm", "../intention/toConfirm.html", 10);
                break;
                // 确认订单
            case "audit1":
                appcan.window.open("toTransferOil", "../intention/toTransferOil.html", 10);
                break;
            case "audit2":
                // 配送自提
                appcan.window.open("pszt", "../intention/pszt.html", 10);
                break;
        }
    }

    // 业务查询
    function search(id) {
        switch (id) {
            case "search0":
                // 全资，合资 订单查询
                appcan.window.open("search", "../search/order.html", 10);
                break;
            case "search1":
                // 全资，合资  销售结算单查询
                appcan.window.open("cus", "../search/jiesuan.html", 10);
                break;
            case "search2":
                // 全资，合资 配送自提查
                appcan.window.open("cus", "../search/pszt.html", 10);
                break;
                // 全资 付油通知单查询
            case "search3":
                appcan.window.open("cus", "../search/fuyou.html", 10);
                break;
            case "search4":
                // 全资，合资 客存查询
                appcan.window.open("cus", "../search/kecun.html", 10);
                break;
                // 全资，合资 销售统计
            case "search5":
                appcan.window.open("search", "../search/huizong.html", 10);
                break;
                // 合资 结算统计
            case "search6":
                appcan.window.open("jiesuan_statistics", "../search/jiesuan_statistics.html", 10);
                break;
        }
    }

    function othersFeatures(id) {

        switch (id) {
            case "other0":

                //------------------ 修改密码
                appcan.window.open("search", "./changePwd.html", 10);
                break;
        }
    }

    function openpage(id) {
        if (id) {
            appcan.window.alert({
                title: "提示",
                content: "该功能模块暂时未开通,敬请期待",
                buttons: ['我支持'],
                callback: function (err, data, dataType, optId) {

                    console.log(err, data, dataType, optId);
                }
            });
        }
    }


    appcan.button("#logout", "btn-act", function () {
        var url = URL + "/app/admin/loginout";
        var paramJsonStr = "";
        var func = logoutCallback;
        var dataType = "text";
        ajaxPostQuery(url, paramJsonStr, func, dataType);
        appcan.window.openToast('加载中...', '0', '5', '1');
    })

    function logoutCallback(data) {
        appcan.window.closeToast();
        if (data == "ok") {
            appcan.locStorage.remove("sid");
            appcan.locStorage.setVal("status", "out");
            uexWindow.evaluateScript("manager", 0, "openindex()");
        } else {
            oneAlert("注销账户失败，请稍后重试！")
        }
    }
</script>

