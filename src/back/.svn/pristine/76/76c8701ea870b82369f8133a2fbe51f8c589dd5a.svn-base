/*****************************************/
/*基础header颜色*/
.bc-head {
    background-color: #2a329d;
}
/*****************************************/
/*基础body背景颜色*/
.bc-bg {
   /* background-color: #f8faf8;*/
  background-color:#f4f4f4;
    
}
/*辅助控件背景颜色*/
.sc-bg {
    /*淡蓝色底纹*/
    /*background-color: #e6f6f5 ;*/
    background-color: #ffffff;
}
/*辅助控件背景颜色*/
.sc-bg-active {
    background-color: #f2f2f2;
}
/*警告背景色*/
.sc-bg-alert {
    background-color: #F16412;
}
/*****************************************/
/*基础字体颜色*/
.bc-text {
    color: black;
}
/*基础标题字体颜色*/
.bc-text-head {
    color: white;
}
/*辅助字体颜色*/
.sc-text {
    color: #848484;
}
/*辅助字体颜色*/
.sc-text-active {
    color: #fda038 !important;
}
/*辅助字体颜色*/
.sc-text-hint {
    color: #E3E3E3;
}
/*辅助字体颜色*/
.sc-text-warn {
    color: #FC7800;
}
/*辅助字体颜色*/
.sc-text-tab {
    color: #ffffff;
}
/*****************************************/
/*基础边框颜色*/
.bc-border {
    border-color: #cccccc;
}
/*辅助边框颜色*/
.sc-border {
    border-color: #FFFFFF;
}
.sc-border-tab {
  /* border-color: #cccccc;*/
}
